{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/shared/Layout.tsx",
    "src/pages/api/generate-pokemon-description.js",
    "src/jest.config.ts",
    "jest.config.ts"
  ],
  "exclude": ["node_modules"]
}
